<!DOCTYPE html>
<html>
<head>
  <title>PageSearch</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '<%= Rails.application.secrets.facebook_app_id %>',
      xfbml      : true,
      version    : 'v2.1'
    });
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "//connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));
</script>
<div id="container">
  <header>
    <div class="title">
      <h1>Page Search</h1>
    </div>
    <%= form_tag(controller: "facebook_pages", action: "page_search", method: "post") do %>
      <%= text_field_tag :fb_id, params[:fb_id], placeholder: "Exemple: 8946498596" %>
      <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
    <% end %>
  </header>
  <div id="content">
    <%= yield %>
  </div>
  <footer>
    <div
      class="fb-like"
      data-share="true"
      data-width="450"
      data-show-faces="true">
    </div>
  </footer>
</div>
</body>
</html>
